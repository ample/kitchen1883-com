<footer class="global-footer">
  <div class="container">
    <a href="/">
      <%= image_tag 'kitchen-1883-logo.svg', class: 'logo' %>
    </a>
    <div class="menu">
      <ul class="<%= local_assigns.try(:[], :klasses) || 'nav' %>">
        <%= render partial: 'public/links/link', collection: global_nav.links.sort_by(&:sort_order), locals: { children: true, depth: 0, position: global_nav.position } if global_nav && global_nav.try(:links) %>
      </ul>
    </div>
    <div class="social-links">
      <%= render partial: 'public/partials/social', collection: current_social_accounts %>
    </div>
  </div>
  <div class="copyright">
    <%= setting(:copyright) %>
  </div>
</footer>
