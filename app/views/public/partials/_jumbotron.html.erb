<% obj ||= current_object %>
<header class="jumbotron">
  <% if obj.attachment.present? %>
    <div class="bg-img" <%= bg_img(obj: obj, size: :jumbotron) %>></div>
  <% end %>
  <div class="container">
    <h1 class="decoration"><span><%= obj.title %></span></h1>
    <div class="desc">
      <%= markdown obj.body if obj.body.present? %>
    </div>
  </div>
</header>
