<article class="menu-special">
  <% if special_item.attachment.present? %>
  <div class="image">
    <%= ix_image_tag(
          special_item.image_path(:original),
          auto: 'format,compress',
          fit: 'crop',
          class: 'img-fluid',
          alt: special_item.alt_text,
          h: 300,
          w: 400
        ) if special_item.image_path.present? %>
  </div>
  <% end %>
  <div class="text">
    <div class="tag"><%= special_item.day %></div>
    <h3 class="title"><%= special_item.title %></h3>
    <hr>
    <div class="description">
      <%= markdown special_item.description %>
    </div>
  </div>
</article>