<fieldset class="content">
  <legend><%= object_name.to_s.titleize %> Content</legend>
  <%= f.input :title %>
  <%= f.input :nav_name %>
  <%= f.input :body, hint: I18n.t('ample_admin.hints.markdown_html').html_safe, input_html: { data: { provide: 'markdown', iconlibrary: 'fa' }} %>
  <%= f.fields_for :attachable do |ff| %>
    <%= ff.label :attachment_id, 'Jumbotron' %>
    <%= ff.asset_drop :attachment_id %>
  <% end %>
  <%= render 'ample_admin/admin/blocks/form', f: f %>
</fieldset>